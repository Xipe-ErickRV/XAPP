@model Xapp.Domain.DTOs.Perfil.ProfileOutput
@{
    ViewData["Title"] = "My Profile";
    Layout = null;

}


<!DOCTYPE html>
<html>
<head>
    <!-- Importar CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <!-- Libreria de Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/Profile.css" rel="stylesheet" type="text/css">
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://drive.google.com/uc?export=view&id=17qRly_RNtO7moC4aSQkWyQjI5xKTv4Ft" id="logo">
        <a href="#Perfil"> Profile</a>
        <a href="#Feed"> Feed</a>
        <a href="#XipeCoins"> XipeCoins</a>
        <a href="#Calendar"> Calendar</a>
    </div>

    <main>
        <!-- Grid Profile-->
        <section class="profilesection">
            <h2 class="myprofiletext bgColor">My Profile</h2>
            <button class="profile-button" type="button">Guardar Cambios</button>

            <div class="profileWrapper">

                <div class="profileInfo-personal">
                    <div class="profileInfo-personal-data">
                        <div class="profile-pic">
                            <img src="@Model.UrlImage"
                                 id="photo" />
                            <input type="file" id="file">
                            <label for="file" id="uploadBtn"> Change Photo </label>

                        </div>
                        <form action="Home/Profile" method="patch" class="profileInfo-personal-data-afterimg">
                            <div class="col-md-12 afterimg">
                                <label class="labels">First Name</label>
                                <input type="text" class="form-control" placeholder="Name" value="@Model.Nombre">
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Last Name</label>
                                <input type="text" class="form-control" placeholder="Last Name" value="@Model.Apellido">
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Area</label>
                                <input type="text" class="form-control" placeholder="Area" value="@Model.Area">
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Phone Number</label>
                                <input type="tel" class="form-control" placeholder="XXX-XXXX-XXX" value="@Model.Telefono">
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Email</label>
                                <input type="email" class="form-control" placeholder="example@example.com" value="@Model.Email">
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Birthday</label>
                                @Html.TextBoxFor(m => m.FechaCumple, "{0:yyyy-MM-dd}", new {@type = "date", @class = "form-control", @placeholder="mm/dd/aaaa"})
                            </div><br>
                            <div class="col-md-12 afterimg">
                                <label class="labels">Bio</label>
                                <input type="text" class="form-control" placeholder="Description" value="@Model.Bio" style="height:fit-content">
                            </div><br>
                        </form>
                    </div>

                </div>
                <!-- Skills -->
                <div class="profileInfo-skills">
                    <div class="p-1 py-5">
                        <h2>
                            <span class="skills_title">Skills</span>
                        </h2><br>
                        <button class="skill-button" type="button">+ Add Skill</button>
                    </div>
                </div>
                <!-- Resume -->
                <div class="profileInfo-resume">
                    <div class="d-flex flex-column p-3 py-5">
                        <h2 class="resume_title">Resume</h2>
                        <button id="boton_icono_pdf"><i class="fa fa-file-pdf-o"></i></button>
                        <button id="PDF_Btn" onclick="document.getElementById('pdf').click()"> <i class="fa fa-folder" id="icono_carpeta"></i> </button>
                        <input type="file" name="subir-pdf" accept="application/pdf,application/vnd.ms-excel" id="pdf">
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- PopUp -->
    <div class="modal-cont">
        <div class="modal-box">
            <span class="close">&times;</span>
            <form action="Home/Profile" method="patch" class="login-box">
                <h1 class="skilltitle"> Add Skill </h1>
                <label class="skilllabel">Name:</label>
                <input type="text" class="skillname" id="field1" required>
                <label class="skilllabel skilllevel">Skill Level:</label>
                <button class=" basic" type="button" id="skill_pill">Basic</button>
                <button class="medium" type="button" id="skill_pill">Medium</button>
                <button class="advanced" type="button" id="skill_pill">Advanced</button>
                <button class="expert" type="button" id="skill_pill">Expert</button>


                <button type="submit" class="save-button">Save</button>
            </form>
        </div>
    </div>

    <!-- Archivo de Javascript -->
    <script src="~/js/perfil_code.js"></script>
</body>
</html>