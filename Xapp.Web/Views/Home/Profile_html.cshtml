@{ ViewData["Title"] = "Profile"; Layout = null; }


<!DOCTYPE html>
<html>
<head>
    <!-- Importar CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <!-- Libreria de Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/Profile_css.css" rel="stylesheet" type="text/css">
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://drive.google.com/uc?export=view&id=17qRly_RNtO7moC4aSQkWyQjI5xKTv4Ft" id="logo">
        <a href="#Perfil" class="sidebar-labels"> Profile</a>
        <a href="#Feed" class="sidebar-labels"> Feed</a>
        <a href="#XipeCoins" class="sidebar-labels"> XipeCoins</a>
        <a href="#Calendar" class="sidebar-labels"> Calendar</a>
    </div>

    <!-- Grid Profile-->
    <section class="profilesection">
        <h2 class="myprofiletext bgColor">My Profile</h2>
        <button class="profile-button" type="button">Guardar Cambios</button>

        <div class="profileWrapper">

            <div class="profileInfo-personal">
                <div class="profileInfo-personal-data">
                    <div class="profile-pic">
                        <img src="https://www.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" id="photo" />
                        <input type="file" id="file">
                        <label for="file" id="uploadBtn"> Change Photo </label>

                    </div>
                    <div class="profileInfo-personal-data-afterimg">
                        <div class="col-md-12 afterimg"><label class="labels">First Name</label><input type="text" class="form-control" placeholder="Name" value=""></div><br>
                        <div class="col-md-12 afterimg"><label class="labels">Last Name</label><input type="text" class="form-control" placeholder="Last Name" value=""></div><br>
                        <div class="col-md-12 afterimg"><label class="labels">Area</label><input type="text" class="form-control" placeholder="Area" value=""></div><br>
                        <div class="col-md-12 afterimg"><label class="labels">Phone Number</label><input type="tel" class="form-control" placeholder="XXX-XXXX-XXX" value=""></div><br>
                        <div class="col-md-12 afterimg"><label class="labels">Email</label><input type="email" class="form-control" placeholder="ejemplo@ejemplo.com" value=""></div><br>
                        <div class="col-md-12 afterimg"><label class="labels">Bio</label><textarea type="input-field" class="form-control" placeholder="Description" value="" style="height:200px"> </textarea></div><br>
                    </div>
                </div>

            </div>
            <!-- Skills -->
            <div class="profileInfo-skills">
                <div class="p-1 py-5">
                    <h2>
                        <span class="skills_title">Skills</span>
                    </h2><br>
                    <div class="grid-skill_List">
                          <div class="one">C++</div>
                          <div class="two">Python</div>
                          <div class="three">C#</div>
                          <div class="four">Minitab</div>
                          <div class="five">Javascript</div>
                    </div>
                    <button class="skill-button" type="button">+ Add Skill</button>
                </div>
            </div>
            <!-- Resume -->
            <div class="profileInfo-resume">
                <div class="d-flex flex-column p-3 py-5">
                    <h2 class="resume_title">Resume</h2>
                    <button id="boton_icono_pdf"><i class="fa fa-file-pdf-o"></i></button>
                    <button id="PDF_Btn" onclick="document.getElementById('pdf').click()"> <i class="fa fa-folder" id="icono_carpeta"></i> </button>
                    <input type="file" name="subir-pdf" accept="application/pdf,application/vnd.ms-excel" id="pdf">
                </div>
            </div>
        </div>
    </section>
</body>

</html>

<!-- PopUp -->
<div class="modal-cont">
    <div class="modal-box">
        <span class="close">&times;</span>
        <form action="" class="login-box">
            <h1> Add Skill </h1>
            <label for="">Name:</label>
            <input type="text" class="nameskill" id="field1" required>
            <button class="btn btn-primary basic" type="button" id="skill_pill">Basic</button>
            <button class="btn btn-primary medium" type="button" id="skill_pill">Medium</button>
            <button class="btn btn-primary advanced" type="button" id="skill_pill">Advanced</button>
            <button class="btn btn-primary expert" type="button" id="skill_pill">Expert</button>
            <hr>
            <input type="text" id="field2" placeholder="" value="" readonly><br>
            <button class="save-button">Save</button>
        </form>
    </div>
</div>

<!-- Archivo de Javascript -->
<script src="~/js/Profile_js.js"></script>